	/**
	 * 
	 * 此方法描述的是：判断厂家是否匹配
	 * 
	 * @Title: loadCjData
	 * @author: 罗然
	 * @param ppstr
	 * @param comBean
	 * @return
	 * @return String 返回类型
	 * @version: 2015-8-11 上午11:17:33
	 */
	private String loadCjData(String ppstr, AppAirComBean comBean) {
		String str = "";
		if (ppstr.length() >= comBean.getCj().length()) {
			if (!ppstr.contains(comBean.getCj())) {
				ISPP = true;
				str = "空调厂家不匹配";
			} else {
				str = "";
			}
		} else {
			if (!comBean.getCj().contains(ppstr)) {
				ISPP = true;
				str = "空调厂家不匹配";
			} else {
				str = "";
			}
		}
		return str;
	}

